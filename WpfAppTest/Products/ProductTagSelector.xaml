<Window x:Class="WpfAppTest.Products.ProductTagSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTest.Products"
        mc:Ignorable="d"
        Title="ProductTagSelector" Height="100" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox Name="Options" Width="100" Height="25" VerticalAlignment="Center"
                  SelectionChanged="Options_SelectionChanged"/>
        <Button Content="Select" ClickMode="Release" Click="Button_Click"
                Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                Width="100"/>
    </Grid>
</Window>
