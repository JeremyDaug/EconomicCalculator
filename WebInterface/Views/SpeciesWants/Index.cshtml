@model IEnumerable<EconModels.PopulationModel.SpeciesWant>

@{
    ViewBag.Title = "Index";
}

<h2>Species Wants</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Back to Species", "Index", "Species", null, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Species.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Want)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tag)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Species.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Want)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tag)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.SpeciesId, want = item.Want }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SpeciesId, want = item.Want })
        </td>
    </tr>
}

</table>
