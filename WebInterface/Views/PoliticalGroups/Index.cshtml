@model IEnumerable<EconModels.PopulationModel.PoliticalGroup>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VariantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Radicalism)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nationalism)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Centralization)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Authority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Planning)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Militarism)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.Tags)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Allies)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Enemies)
		</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.VariantName)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Radicalism)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Nationalism)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Centralization)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Authority)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Planning)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Militarism)
		</td>
		<td>
			<table class="table-bordered">
				<tr>
					<th>
						Tag
					</th>
				</tr>
				@foreach (var tag in item.Tags)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => tag.Tag)
						</td>
					</tr>
				}
			</table>
		</td>
		<td>
			<table class="table-bordered">
				<tr>
					<th>
						Ally Name
					</th>
					<th>
						Variant Name
					</th>
				</tr>
				@foreach (var ally in item.Allies)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => ally.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => ally.VariantName)
						</td>
					</tr>
				}
			</table>
		</td>
		<td>
			<table class="table-bordered">
				<tr>
					<th>
						Enemy Name
					</th>
					<th>
						Variant Name
					</th>
				</tr>
				@foreach (var enemy in item.Enemies)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => enemy.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => enemy.VariantName)
						</td>
					</tr>
				}
			</table>
		</td>
		<td>
			@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
			@Html.ActionLink("Details", "Details", new { id = item.Id }) |
			@Html.ActionLink("Delete", "Delete", new { id = item.Id })
		</td>
	</tr>
}

</table>
