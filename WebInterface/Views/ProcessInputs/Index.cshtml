@model IEnumerable<EconModels.ProcessModel.ProcessInput>

@{
    ViewBag.Title = "Index";
}

<h2>Process Inputs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Input.Name)
        </th>
        <th>
            @Html.ActionLink("Process", "Index", "Processes", null, null)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tag)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Input.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Process.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tag)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { processId=item.ProcessId, inputId=item.InputId }) |
            @Html.ActionLink("Details", "Details", new { processId = item.ProcessId, inputId = item.InputId }) |
            @Html.ActionLink("Delete", "Delete", new { processId = item.ProcessId, inputId = item.InputId })
        </td>
    </tr>
}

</table>
