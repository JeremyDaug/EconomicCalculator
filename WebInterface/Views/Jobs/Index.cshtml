@model IEnumerable<EconModels.JobModels.Job>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style>
    th, td {
        border: 1px solid black;
        align-content: center;
        justify-content: center;
        padding: 10px;
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table-striped" style="border:1px solid black;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkillLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Processes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skill)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkillLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Labor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelatedChild)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SkillLevel)
        </td>
        <td>
            <table class="table-striped" style="border:1px solid black;">
                @foreach (var proc in item.Processes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => proc.Name)
                        </td>
                    </tr>
                }
            </table>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Skill.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SkillLevel)
        </td>
        <td>
            <table class="table-striped" style="border:1px solid black;">
                @foreach (var labor in item.Labor)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => labor.Name)
                        </td>
                    </tr>
                }
            </table>
        </td>
        <td>
            <table class="table-striped" style="border:1px solid black;">
                @foreach (var relJob in item.RelatedChild)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => relJob.Name)
                        </td>
                    </tr>
                }
            </table>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
