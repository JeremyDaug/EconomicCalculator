@model IEnumerable<EconModels.SkillsModel.Skill>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style>
    th, td {
        border: 1px solid black;
        align-content: center;
        justify-content: center;
        padding: 10px;
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table-striped" style="border:1px solid black;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Min)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Max)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValidLabors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelationChild)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkillsJobs)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Min)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Max)
        </td>
        <td>
            <table class="table-bordered">
                @foreach (var labor in item.ValidLabors)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => labor.Name)
                        </td>
                    </tr>
                }
            </table>
        </td>
        <td>
            <table class="table-bordered">
                @foreach(var skill in item.RelationChild)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => skill.Name)
                        </td>
                    </tr>
                }
            </table>
        </td>
        <td>
            <table class="table-bordered">
                @foreach(var job in item.SkillsJobs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => job.Name)
                        </td>
                    </tr>
                }
            </table>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
