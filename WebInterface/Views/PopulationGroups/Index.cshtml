@model IEnumerable<EconModels.PopulationModel.PopulationGroup>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.PrimaryJob.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Territory.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Infants)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Children)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Adults)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Seniors)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.SkillLevel)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Priority)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.SpeciesBreakdown)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CultureBreakdown)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PoliticalBreakdown)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PrimaryJob.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Territory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Infants)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Children)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adults)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seniors)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SkillLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
		<td>
			<table class="table-bordered">
				<tr>
					<th>
						Species
					</th>
					<th>
						Percent
					</th>
				</tr>
				@foreach (var spe in item.SpeciesBreakdown)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => spe.Species.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => spe.Percent)
						</td>
					</tr>
				}
			</table>
		</td>
		<td>
			<table class="table-bordered">
				<tr>
					<th>
						Culture
					</th>
					<th>
						Percent
					</th>
				</tr>
				@foreach (var spe in item.CultureBreakdown)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => spe.Culture.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => spe.Percent)
						</td>
					</tr>
				}
			</table>
		</td>
		<td>
			<table class="table-bordered">
				<tr>
					<th>
						Political Group
					</th>
					<th>
						Percent
					</th>
				</tr>
				@foreach (var spe in item.PoliticalBreakdown)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => spe.PoliticalGroup.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => spe.Percent)
						</td>
					</tr>
				}
			</table>
		</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
