@model IEnumerable<EconModels.PopulationModel.SpeciesAnathema>

@{
    ViewBag.Title = "Index";
}

<h2>Species Anathemas</h2>

<p>
    @Html.ActionLink("Create New", "Create") | 
    @Html.ActionLink("Back to Species", "Index", "Species", null, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Species)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anathema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tag)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Anathema.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Species.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tag)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.SpeciesId, anathema = item.AnathemaId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SpeciesId, anathema = item.AnathemaId })
        </td>
    </tr>
}

</table>
